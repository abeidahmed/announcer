<%= render "templates/focused", title: "Create your account" do %>
  <%= form_with model: @user, class: "box-body", data: { controller: "form", action: "turbo:submit-end->form#onError" } do |form| %>
    <div class="form-group">
      <%= form.label :full_name %>
      <%= form.text_field :full_name, class: "form-control", required: true %>
      <%= render "shared/form_error", error_type: "full_name" %>
    </div>
    <div class="form-group">
      <%= form.label :email_address %>
      <%= form.email_field :email_address, class: "form-control", required: true %>
      <%= render "shared/form_error", error_type: "email_address" %>
    </div>
    <div class="form-group">
      <%= form.label :password %>
      <%= form.password_field :password, class: "form-control", aria: { describedby: "password-help" }, required: true %>
      <p id="password-help" class="note">Minimum 6 characters long</p>
      <%= render "shared/form_error", error_type: "password" %>
    </div>
    <div class="form-group">
      <%= form.submit "Create account", data: { form_target: "submitBtn" }, class: "btn btn-primary btn-block" %>
    </div>
  <% end %>
  <%= content_for :footer do %>
    <p class="text-gray text-center">Already have an account? <a href="#" class="font-medium">Sign in</a></p>
    <div class="mt-5 text-center">
      <a href="#" class="mr-2 link-gray">Privacy & terms</a>
      <a href="#" class="link-gray">Contact</a>
    </div>
  <% end %>
<% end %>
