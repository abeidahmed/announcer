<%= form_with model: [:app, @project], id: "project-setting-form", class: "max-w-md" do |form| %>
  <div class="form-group">
    <%= form.label :name, "Project name" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :subdomain %>
    <%= form.text_field :subdomain, class: "form-control" %>
    <p class="note">This is where your posts are hosted. Eg: subdomain.yellit.space</p>
  </div>
  <div class="form-group">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
