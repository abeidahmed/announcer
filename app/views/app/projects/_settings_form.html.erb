<%= form_with model: model,
  data: { controller: "form", action: "turbo:submit-end->form#onError" },
  id: "project-setting-form", class: "max-w-md" do |form|
%>
  <div class="form-group">
    <%= form.label :name, "Project name" %>
    <%= form.text_field :name, class: "form-control", autocomplete: "off", required: true, placeholder: "My project" %>
    <%= render "shared/form_error", error_type: "name" %>
  </div>
  <div class="form-group">
    <%= form.label :subdomain %>
    <div class="flex items-center justify-between">
      <%= form.text_field :subdomain,
        class: "form-control",
        autocomplete: "off",
        placeholder: "coolproject",
        aria: { describedby: "help-text" }
      %>
      <button type="button" class="btn-link text-gray ml-3">
        Remove
      </button>
    </div>
    <p id="help-text" class="note">This is where your posts are hosted. Eg: subdomain.yellit.space</p>
    <%= render "shared/form_error", error_type: "subdomain" %>
  </div>
  <div class="form-group">
    <%= form.submit class: "btn btn-primary", data: { form_target: "submitBtn" } %>
  </div>
<% end %>
